#!/bin/bash

cd $HIVE_HOME/bin

run_migrations(){
  if schematool -dbType "postgres" -validate | grep 'Done with metastore validation' | grep '[SUCCESS]'; then
    echo '--> Database OK'

  else
    # TODO: how to apply new version migrations or repair validation issues
    schematool -dbType "postgres" -initSchema --verbose 
    schematool -dbType postgres -info
    echo '--> Database Initialized: ${DATABASE_TYPE}'
    
    #hive --service schemaTool -dbType postgres -initSchema --verbose | true
    #hive --service schemaTool -dbType postgres -upgradeSchema --verbose | true

  fi
}

run_migrations

./hive --service metastore
